<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/green"
    tools:context=".settingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="235dp">

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView15"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView15"
                app:srcCompat="@drawable/top_gradle" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="419dp"
                android:layout_height="239dp"
                app:srcCompat="@drawable/top_background"
                tools:layout_editor_absoluteX="-3dp"
                tools:layout_editor_absoluteY="-4dp" />

            <TextView
                android:id="@+id/head14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/head14"
                android:textColor="#ffff"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView17"
                app:layout_constraintEnd_toEndOf="@+id/imageView17"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="@+id/imageView17"
                app:layout_constraintTop_toTopOf="@+id/imageView17"
                app:layout_constraintVertical_bias="0.082" />

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="132dp"
                android:layout_height="121dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView17"
                app:layout_constraintEnd_toEndOf="@+id/imageView17"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.622"
                app:srcCompat="@drawable/profile" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#26D590"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.044"
                app:layout_constraintStart_toStartOf="@+id/imageView17"
                app:layout_constraintTop_toTopOf="@+id/imageView17"
                app:layout_constraintVertical_bias="0.083"
                app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#068251"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.928"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.083"
                app:srcCompat="@drawable/ic_baseline_notifications_24" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/text00x"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/text00x"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="48dp"/>

                <Switch
                    android:id="@+id/switch2"
                    android:layout_width="315dp"
                    android:layout_height="match_parent"
                    android:text="@string/switch2"
                    android:textSize="20dp"
                    style="@style/TEXT"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/text000"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/text000"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="48dp"/>
                <TextView
                    android:id="@+id/text001"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/text001"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    style="@style/TEXT"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="48dp"/>
                <TextView
                    android:id="@+id/text002"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="@string/text002"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    style="@style/TEXT"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="49dp"/>
                <TextView
                    android:id="@+id/text003"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/text003"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    style="@style/TEXT"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="48dp"/>
                <TextView
                    android:id="@+id/text004"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="@string/text004"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    style="@style/TEXT"
                    android:layout_marginLeft="49dp"/>
                <TextView
                    android:id="@+id/text005"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/text005"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    style="@style/TEXT"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="48dp"/>
                <TextView
                    android:id="@+id/text006"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="@string/text006"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    style="@style/TEXT"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="49dp"/>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>