<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dealActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="@dimen/Image2width"
                android:layout_height="@dimen/Image2width"
                android:src="@drawable/top_gradle"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/Layout1width"
                android:layout_height="@dimen/Layout3height"
                android:src="@drawable/top_background"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/head2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/head2"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="@dimen/textsize1"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView5"
                app:layout_constraintVertical_bias="0.161" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="@dimen/Image3width"
                android:layout_height="@dimen/Image3heigth"
                android:src="@drawable/investment"
                app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                app:layout_constraintEnd_toEndOf="@+id/imageView5"
                app:layout_constraintStart_toStartOf="@+id/imageView5"
                app:layout_constraintTop_toBottomOf="@+id/head2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button12"
                    android:layout_width="@dimen/button3width"
                    android:layout_height="@dimen/Imageview1width"
                    android:layout_marginLeft="@dimen/button3marginleft"
                    android:layout_marginTop="@dimen/button3margintop"
                    android:background="@color/green"
                    android:text="@string/button12"
                    android:textColor="#ffff"
                    android:textSize="@dimen/buttontext"/>

                <Button
                    android:id="@+id/button13"
                    android:layout_width="@dimen/button4width"
                    android:layout_height="@dimen/button4height"
                    android:layout_marginLeft="@dimen/button3marginleft"
                    android:layout_marginTop="@dimen/Card1margin"
                    android:background="@color/green"
                    android:text="@string/button13"
                    android:textColor="#ffff"
                    android:textSize="@dimen/buttontext"/>

                <Button
                    android:id="@+id/button14"
                    android:layout_width="@dimen/button3width"
                    android:layout_height="@dimen/button5height"
                    android:layout_marginLeft="@dimen/button3marginleft"
                    android:layout_marginTop="@dimen/Card1margin"
                    android:background="@color/green"
                    android:text="@string/button14"
                    android:textColor="#ffff"
                    android:textSize="@dimen/buttontext"/>
                <Button
                    android:id="@+id/button21"
                    android:layout_width="@dimen/button3width"
                    android:layout_height="@dimen/button4height"
                    android:layout_marginLeft="@dimen/button3marginleft"
                    android:layout_marginTop="@dimen/Card1margin"
                    android:background="@color/green"
                    android:text="@string/button50"
                    android:textColor="#ffff"
                    android:textSize="@dimen/buttontext"/>

                <Button
                    android:id="@+id/button15"
                    android:layout_width="@dimen/button3width"
                    android:layout_height="@dimen/button4height"
                    android:layout_marginLeft="@dimen/button3marginleft"
                    android:layout_marginTop="@dimen/Card1margin"
                    android:background="@color/green"
                    android:text="@string/button20"
                    android:textColor="#ffff"
                    android:textSize="@dimen/buttontext" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>