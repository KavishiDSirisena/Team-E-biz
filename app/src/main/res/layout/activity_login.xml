<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_e">

    <ImageView
        android:id="@+id/imageView44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_background"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/Layout1"
        android:layout_marginBottom="@dimen/Layout"
        android:text="Hi,\n Please Login"
        android:textColor="@color/white"
        android:textSize="@dimen/Text1"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.352"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="@dimen/laypadding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView44">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#000000"
            android:textSize="@dimen/Sizetext1"
            android:textStyle="bold"
            tools:ignore="HardcodedText,SpUsage" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/laypadding1"
            android:background="@drawable/edittext_background"
            android:ems="10"
            android:hint="Enter Your Email"
            android:inputType="textPersonName"
            android:padding="@dimen/laypadding1"
            android:textColor="#707070"
            android:textSize="@dimen/Sizetext2"
            tools:ignore="Autofill,HardcodedText" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/laypadding"
            android:text="Password"
            android:textColor="#000000"
            android:textSize="@dimen/Sizetext1"
            android:textStyle="bold"
            tools:ignore="HardcodedText,SpUsage" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/laypadding1"
            android:background="@drawable/edittext_background"
            android:ems="10"
            android:hint="Enter Your Password"
            android:inputType="textPassword"
            android:padding="@dimen/laypadding1"
            android:textColor="#707070"
            android:textColorHint="#757575"
            android:textSize="@dimen/Sizetext2"
            tools:ignore="Autofill,HardcodedText" />


        <Button
            android:layout_width="@dimen/laywei"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/laymar1"
            android:background="#00000000"
            android:elevation="@dimen/evelution"
            android:text="@string/forget_password"
            android:textColor="@color/black" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/Layheight"
            android:layout_marginTop="@dimen/laypadding"
            android:orientation="horizontal">


            <View
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Layheight1"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#707070" />

            <Button
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/Layout1"
                android:layout_marginEnd="@dimen/Layout1"
                android:background="#00000000"
                android:text="Or Signup"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />

            <View
                android:id="@+id/view2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Layheight1"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#707070" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="DisableBaselineAlignment"
            tools:layout_marginTop="@dimen/laypadding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/Layout"
                android:layout_weight="0.5"
                android:background="@drawable/socail_btn_background"
                android:orientation="horizontal"
                tools:layout_marginEnd="@dimen/Layout1">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/Laymar"
                    app:srcCompat="@drawable/facebook"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Facebook"
                    android:textColor="@color/green"
                    android:textSize="@dimen/Sizetext2"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,InefficientWeight,NestedWeights" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/Layout"
                android:layout_marginStart="@dimen/Layout1"
                android:layout_weight="0.5"
                android:background="@drawable/socail_btn_background"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/Laymar"
                    app:srcCompat="@drawable/google"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Google"
                    android:textColor="@color/green"
                    android:textSize="@dimen/Sizetext2"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,InefficientWeight,NestedWeights" />

            </LinearLayout>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button3"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/Layout"
            android:layout_marginTop="@dimen/laypadding"
            android:background="@drawable/button_background"
            android:text="LOGIN"
            android:textColor="#ffffff"
            android:textSize="@dimen/Text2"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>